{{- 'service.css' | asset_url | stylesheet_tag -}}

{% assign _section = section.settings %}
{% assign _blocks = section.blocks %}

{% if _blocks.size > 0 %}
  <section class="services">
    <div class="page-width">
      {% if _section.heading != blank %}
        <h1 data-aos="fade-up" class="services__heading">{{ _section.heading }}</h1>
      {% endif %}

      <div class="services__inner">
        {% for block in _blocks %}
          {% assign _block = block.settings %}

          {% if _block.image != blank %}
            <div data-aos="fade-up" class="service">
              <div class="service__image">
                <img src="{{ _block.image |  image_url: width: 600 }}" loading="lazy" alt="">
              </div><!-- /.service__image -->
      
              <div class="service__entry">
                {{ _block.content }}
              </div><!-- /.service__entry -->
            </div><!-- /.service -->
          {% endif %}
        {% endfor %}
      </div><!-- /.services__inner -->
    </div><!-- /.page-width -->
  </section><!-- /.services -->
{% endif %}

{% schema %}
  {
  "name": "Services",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "name": "Service",
      "type": "service",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Services"
    }
  ]
}  
{% endschema %}